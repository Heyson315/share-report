[MASTER]
# Maximum line length
max-line-length=120

# Allow TODO comments
notes=TODO,FIXME,XXX

# Set minimum acceptable score (allow current 8.77/10 to pass)
fail-under=8.0

# Ignore optional dependencies that may not be installed
ignored-modules=pandas,openpyxl,pytest,openai,azure,azure.identity,msal,msgraph,mcp

[MESSAGES CONTROL]
# Disable specific messages that may not apply
disable=
    C0111,  # missing-docstring (we have some utility scripts)
    R0913,  # too-many-arguments
    R0914,  # too-many-locals
    W0703,  # broad-except (sometimes needed for robustness)
    W1203,  # logging-fstring-interpolation (f-strings in logging are readable)
    R0801,  # duplicate-code (some duplication in MCP servers is acceptable)
    C0413,  # wrong-import-position (imports after sys.path modifications)
    W0612,  # unused-variable (sometimes needed for unpacking)
    R0915,  # too-many-statements (complex functions acceptable for scripts)
    R0912,  # too-many-branches (complex logic acceptable for audit scripts)

[FORMAT]
# Maximum number of characters on a single line
max-line-length=120

# Allow snake_case for variable names
variable-rgx=[a-z_][a-z0-9_]{2,30}$

[DESIGN]
# Minimum number of public methods for a class
min-public-methods=0

# Maximum number of attributes for a class
max-attributes=10

[BASIC]
# Good variable names (common Python/data science abbreviations)
good-names=i,j,k,df,ap,f,e,td,ts,wb,ws,ex,db,up,id,pk,fk,r,v,n,x,y,z
